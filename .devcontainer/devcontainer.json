{
  "name": "AWS IoT Workshop Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "amazonwebservices.aws-toolkit-vscode",
    "ms-python.python"
  ],
  "postCreateCommand": "aws --version && python3 --version && java -version"
}
